.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
}
.tab-bar-wrapper {
  display: flex;
}
.tab-bar-inset-bottom {
  /* 适配苹果底部安全区 */
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
  min-height: 68rpx;
}

.tab-bar-border {
  background-color: #E7E7E7;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
}

.tab-bar-item {
  height: 112rpx;
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background: #FFFFFF;
  line-height: 0;
}

.tab-bar-item image {
  width: 64rpx;
  height: 64rpx;
  padding-top: 13rpx;
  box-sizing: content-box;
}

.tab-bar-item .text {
  font-size: 20rpx;
  line-height: 32rpx;
  font-family: 'PingFang SC';
  font-style: normal;
  margin-top: 4rpx;
}
.tab-bar-item view.current {
  font-weight: 600;
}

.tab-bar-item.ar image,.tab-bar-item.ar .bg {
  width: 96rpx;
  height: 96rpx;
  position: absolute;
  top: -30rpx;
  box-sizing: content-box;
  padding: 12rpx;
  background: #FFFFFF;
  border-radius: 50%;
}
.tab-bar-item.ar .bg {
  top: -32rpx;
  z-index: -1;
  border: 1rpx solid #E7E7E7;
}
.tab-bar-item.ar .text {
  padding-top: 82rpx;
}
